
@{
    ViewData["Title"] = "Employees";
}

<div class="row row-cols-4">
    @foreach (Employee emp in ViewBag.Employees)
    {
        <a href="#">
            <div class="card col">
                <div class="card-body">
                    <h5 class="card-title">@emp.Name</h5>
                    <p class="card-text">@emp.Email</p>
                </div>
            </div>
        </a>
    }

</div>