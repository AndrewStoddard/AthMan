
@{
    ViewData["Title"] = "Clients";
}

<div class="row row-cols-4">
    @foreach (Client client in ViewBag.Clients)
    {
        <a asp-action="View" asp-controller="Clients" asp-route-clientId="@client.ClientID">
            <div class="card h-100 col">
                <div class="card-body">
                    <h5 class="card-title">@client.FullName</h5>
                    <p class="card-text">@client.Email</p>
                </div>
            </div>
        </a>
    }
    <div class="container-fluid">
        <a class="btn btn-primary" asp-action="Add" asp-controller="Clients">Add New</a>
    </div>

</div>